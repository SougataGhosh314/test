<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetails"
    android:background="#D9D9D9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical"
            android:background="#D9D9D9">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:background="#D9D9D9">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#D9D9D9">
                        <ImageView
                            android:id="@+id/imageMainPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="30dp"
                            android:layout_marginTop="0dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@android:drawable/btn_star_big_on" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical"
                        android:background="#D9D9D9">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9D9D9">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Movie name: "
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/movieName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="2"
                                android:textSize="18dp"
                                android:textColor="@color/colourBlack"
                                android:ems="10"
                                android:hint="Movie Title"
                                android:inputType="textPersonName"
                                android:padding="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:textColor="@color/colourBlack"
                                android:gravity="center"
                                android:text="Date: "
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/movieDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:textColor="@color/colourBlack"
                                android:hint="Date"
                                android:textSize="18dp"
                                android:inputType="date"
                                android:padding="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Timing: "
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/movie_timing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:hint="19:00 hrs"
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:inputType="time"
                                android:padding="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:inputType="time"
                                android:textColor="@color/colourBlack"
                                android:text="Duration: "
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/durationID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:clickable="true"
                                android:ems="10"
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:hint="2:30 "
                                android:padding="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Language: "
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/language"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:clickable="true"
                                android:textColor="@color/colourBlack"
                                android:ems="10"
                                android:textSize="18dp"
                                android:hint="Hindi/English"
                                android:padding="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="Certification: "
                                android:textColor="@color/colourBlack"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/certification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:clickable="true"
                                android:textColor="@color/colourBlack"
                                android:ems="10"
                                android:textSize="18dp"
                                android:hint="U, A, U/A"
                                android:padding="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <Button
            android:id="@+id/watchTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="8dp"
            android:background="@drawable/border"
            android:fontFamily="@android:string/yes"
            android:layout_margin="12dp"
            android:text="Watch Trailer"
            android:textColor="#F7D00C"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/bookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="BOOK NOW"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#F7D00C"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>