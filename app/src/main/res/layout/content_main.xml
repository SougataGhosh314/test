<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/sports_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/sports"
                        android:layout_weight="0.5"
                        />
                    <ImageView
                        android:id="@+id/movie_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:src="@drawable/movie"
                        android:layout_weight="0.5"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Sports"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textColor="#fff"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="0.5"
                        android:text="Movie"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/sanjog_hall_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/marriage"
                        />
                    <ImageView
                        android:id="@+id/bar_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/baricon"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Sanjog Hall"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="0.5"
                        android:text="Bar"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/swimming_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/swim"
                        />
                    <ImageView
                        android:id="@+id/party_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="80dp"
                        android:src="@drawable/party"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="40dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="Swimming Pool"
                        android:textColor="#fff"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:text="Party Hall"
                        android:textColor="#fff"
                        android:gravity="center"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/trinco_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/resturant"
                        />
                    <ImageView
                        android:id="@+id/guest_activity_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/guestroom2"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:text="Trinco"
                        android:textColor="#fff"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="Guest Room"
                        android:textColor="#fff"
                        android:gravity="center"
                        />


                </LinearLayout>





            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>